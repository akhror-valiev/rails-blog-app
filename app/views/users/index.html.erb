<section>
  <h1>List of all users</h1>
  <ul> 
    <% @users.each do |user| %>
      <li> 
        <img src=<%= user.photo %> />
        <div>
          <h3><%= link_to user.name, user_path(user) %> </h3>
          <span><%= user.posts_count %></span>
        </div>
      </li>
    <% end %>
  </ul>
</section>